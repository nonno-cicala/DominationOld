<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.Material" />



    <style name="ButtonStyle.White" parent="@*com.Slack:style/ButtonStyle">
        <item name="android:textColor">@*com.Slack:color/blue_link</item>
        <item name="*com.Slack:colorButtonNormal">@*android:color/button_material_dark</item>
    </style>
    <style name="CardStyle">
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_marginTop">4.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:layout_marginBottom">4.0dip</item>
        <item name="*com.Slack:cardBackgroundColor">@*android:color/background_floating_material_dark</item>
        <item name="*com.Slack:cardCornerRadius">3.0dip</item>
    </style>

    <style name="NoActionBarActivityTheme" parent="@*com.Slack:style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="*com.Slack:windowActionModeOverlay">true</item>
        <item name="*com.Slack:actionOverflowButtonStyle">@*com.Slack:style/Widget.ActionButton.Overflow</item>
        <item name="*com.Slack:actionModeStyle">@*com.Slack:style/ActionModeTheme</item>
        <item name="*com.Slack:actionModeBackground">@*com.Slack:color/off_white_background</item>
        <item name="*com.Slack:actionModeCloseDrawable">@*com.Slack:drawable/ic_back_grey_24dp</item>
        <item name="*com.Slack:panelBackground">@*android:color/background_dark</item>
    </style>



    <style name="FindYourTeamsContainer.EmailEntry" parent="@*com.Slack:style/FindYourTeamsContainer">
        <item name="android:background">@*android:color/button_material_dark</item>
        <item name="android:paddingLeft">@*com.Slack:dimen/join_team_screen_margins</item>
        <item name="android:paddingRight">@*com.Slack:dimen/join_team_screen_margins</item>
        <item name="android:paddingBottom">@*com.Slack:dimen/join_team_screen_margins</item>
    </style>

    <style name="FindYourTeamsContainer.Welcome" parent="@*com.Slack:style/FindYourTeamsContainer">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@*android:color/background_dark</item>
    </style>
</resources>
